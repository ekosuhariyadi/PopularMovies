<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/reviewParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reviewContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="10"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/reviewAuthor"
            app:layout_constraintLeft_toLeftOf="@id/reviewParent"
            app:layout_constraintRight_toRightOf="@id/reviewParent"
            app:layout_constraintTop_toTopOf="@id/reviewParent"
            tools:text="Lorem ipsum" />

        <TextView
            android:id="@+id/reviewAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/reviewParent"
            app:layout_constraintRight_toRightOf="@id/reviewParent"
            app:layout_constraintTop_toBottomOf="@+id/reviewContent"
            tools:text="Eko Suhariyadi" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>